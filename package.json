{
	"name": "contextual-snips",
	"displayName": "Contextual Snippets",
	"description": "Take fine grain control of your snippets suggestions",
	"version": "1.0.0",
	"license": "MIT",
	"publisher": "brpaz",
	"icon": "icon.png",
	"engines": {
		"vscode": "^1.22.0"
	},
	"repository": {
		"url": "https://github.com/brpaz/vscode-contextual-snips"
	},
	"categories": [
		"Snippets"
	],
	"keywords": [
		"snippets",
		"context",
		"patterns"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "contextual-snips.refresh",
				"title": "Contextual Snippets: Refresh Snippets"
			},
			{
				"command": "contextual-snips.openSnippetsFolder",
				"title": "Contextual Snippets: Open Snippets Folder"
			},
			{
				"command": "contextual-snips.editSnippetFile",
				"title": "Contextual Snippets: Edit Snippets File"
			},
			{
				"command": "contextual-snips.createSnippet",
				"title": "Contextual Snippets: Create From Selection"
			}
		],
		"configuration": {
			"title": "Contextual Snippets",
			"properties": {
				"contextual-snips.snippets-path": {
					"type": "string",
					"default": null,
					"description": "Override the default snippets location."
				}
			}
		},
		"menus": {
			"editor/context": [
				{
					"command": "contextual-snips.createSnippet",
					"when": "editorHasSelection",
					"group": "2_workspace"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"lint:fix": "eslint src --ext ts --fix",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "jest",
		"test:cover": "yarn run test --coverage",
		"release": "semantic-release",
		"commit": "npx git-cz",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@semantic-release/git": "^10.0.1",
		"@types/fs-extra": "^9.0.13",
		"@types/glob": "^7.2.0",
		"@types/jest": "^28.1.0",
		"@types/memoizee": "^0.4.8",
		"@types/mock-fs": "^4.13.1",
		"@types/node": "^17.0.39",
		"@types/picomatch": "^2.3.0",
		"@types/vscode": "^1.22.0",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.43.0",
		"cz-conventional-changelog": "3.3.0",
		"eslint": "^8.17.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"glob": "^8.0.3",
		"husky": "^8.0.0",
		"jest": "^28.1.0",
		"jest-mock-extended": "^2.0.6",
		"lint-staged": "^13.0.0",
		"mock-fs": "^5.1.2",
		"prettier": "^2.6.2",
		"semantic-release": "^19.0.2",
		"semantic-release-vsce": "^5.0.16",
		"ts-jest": "^28.0.4",
		"typescript": "^4.7.3",
		"vscode-test": "^1.6.1"
	},
	"dependencies": {
		"fast-glob": "^3.2.11",
		"fs-extra": "^10.1.0",
		"kind-of": "^6.0.3",
		"memoizee": "^0.4.15",
		"open": "^8.4.0",
		"picomatch": "^2.3.1",
		"vsce": "^2.9.1"
	},
	"release": {
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/release-notes-generator",
			"@semantic-release/git",
			[
				"semantic-release-vsce",
				{
					"packageVsix": true
				}
			],
			[
				"@semantic-release/github",
				{
					"assets": [
						{
							"path": "*.vsix",
							"label": "Extension File"
						}
					]
				}
			]
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
