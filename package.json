{
	"name": "contextual-snips",
	"displayName": "Contextual Snippets",
	"description": "Take fine grain control of your snippets suggestions",
	"version": "1.0.0",
	"publisher": "brpaz",
	"icon": "icon.png",
	"engines": {
		"vscode": "^1.22.0"
	},
	"repository": {
		"url": "https://github.com/brpaz/vscode-contextual-snips"
	},
	"categories": [
		"Snippets"
	],
	"keywords": [
		"snippets",
		"context",
		"patterns"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "contextual-snips.refresh",
				"title": "Contextual Snippets: Refresh Snippets"
			},
			{
				"command": "contextual-snips.openSnippetsFolder",
				"title": "Contextual Snippets: Open Snippets Folder"
			},
			{
				"command": "contextual-snips.editSnippetFile",
				"title": "Contextual Snippets: Edit Snippets File"
			},
			{
				"command": "contextual-snips.createSnippet",
				"title": "Contextual Snippets: Create From Selection"
			}
		],
		"configuration": {
			"title": "Contextual Snippets",
			"properties": {
				"contextual-snips.snippets-path": {
					"type": "string",
					"default": null,
					"description": "Override the default snippets location."
				}
			}
		},
		"menus": {
			"editor/context": [
				{
					"command": "contextual-snips.createSnippet",
					"when": "editorHasSelection",
					"group": "2_workspace"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"lint:fix": "eslint src --ext ts --fix",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "jest",
		"test:cover": "yarn run test --coverage",
		"release": "semantic-release",
		"commit": "npx git-cz"
	},
	"devDependencies": {
		"@types/fs-extra": "^9.0.6",
		"@types/glob": "^7.1.1",
		"@types/jest": "^26.0.3",
		"@types/memoizee": "^0.4.5",
		"@types/mock-fs": "^4.10.0",
		"@types/node": "^13.11.0",
		"@types/picomatch": "^2.2.1",
		"@types/vscode": "^1.22.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"@typescript-eslint/parser": "^2.26.0",
		"cz-conventional-changelog": "3.2.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-prettier": "^3.1.4",
		"glob": "^7.1.6",
		"husky": "^4.2.5",
		"jest": "^26.1.0",
		"jest-mock-extended": "^1.0.9",
		"lint-staged": "^10.2.11",
		"mock-fs": "^4.12.0",
		"prettier": "^2.0.5",
		"semantic-release": "^17.1.1",
		"semantic-release-vsce": "^3.0.1",
		"ts-jest": "^26.1.1",
		"typescript": "^3.9.7",
		"vscode-test": "^1.6.1"
	},
	"dependencies": {
		"fast-glob": "^3.2.4",
		"fs-extra": "^9.0.1",
		"memoizee": "^0.4.14",
		"open": "^7.3.0",
		"picomatch": "^2.2.2"
	},
	"release": {
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/release-notes-generator",
			"@semantic-release/github",
			"semantic-release-vsce"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn run test"
		}
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}